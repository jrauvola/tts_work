{
  "title": "TTS Realtime Overview",
  "panels": [
    {
      "type": "graph",
      "title": "TTFA (ms)",
      "targets": [
        {"expr": "histogram_quantile(0.5, sum(rate(ttfa_ms_bucket[5m])) by (le))"},
        {"expr": "histogram_quantile(0.95, sum(rate(ttfa_ms_bucket[5m])) by (le))"}
      ]
    },
    {
      "type": "graph",
      "title": "Requests QPS",
      "targets": [{"expr": "sum(rate(requests_total[5m]))"}]
    },
    {
      "type": "graph",
      "title": "Active WS Connections",
      "targets": [{"expr": "ws_active_conns"}]
    },
    {
      "type": "graph",
      "title": "Errors",
      "targets": [{"expr": "sum by (code) (rate(errors_total[5m]))"}]
    },
    {
      "type": "graph",
      "title": "GPU Utilization (%)",
      "targets": [{"expr": "gpu_utilization"}]
    },
    {
      "type": "graph",
      "title": "Queue Depth (TTS)",
      "targets": [{"expr": "queue_depth"}]
    }
  ]
}

